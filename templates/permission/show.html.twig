{% extends 'base.html.twig' %}

{% block title %}Permission{% endblock %}

{% block body %}
    <h1>Permission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ permission.id }}</td>
            </tr>
            <tr>
                <th>Entity</th>
                <td>{{ permission.entity }}</td>
            </tr>
            <tr>
                <th>Access</th>
                <td>{{ permission.access ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>View</th>
                <td>{{ permission.view ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Creating</th>
                <td>{{ permission.creating ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Edit</th>
                <td>{{ permission.edit ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Deleting</th>
                <td>{{ permission.deleting ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('permission_index') }}">back to list</a>

    <a href="{{ path('permission_edit', {'id': permission.id}) }}">edit</a>

    {{ include('permission/_delete_form.html.twig') }}
{% endblock %}
