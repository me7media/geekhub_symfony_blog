{% extends 'base.html.twig' %}

{% block title %}Permission index{% endblock %}

{% block body %}
    <h1>Permission index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Entity</th>
                <th>Access</th>
                <th>View</th>
                <th>Creating</th>
                <th>Edit</th>
                <th>Deleting</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for permission in permissions %}
            <tr>
                <td>{{ permission.id }}</td>
                <td>{{ permission.entity }}</td>
                <td>{{ permission.access ? 'Yes' : 'No' }}</td>
                <td>{{ permission.view ? 'Yes' : 'No' }}</td>
                <td>{{ permission.creating ? 'Yes' : 'No' }}</td>
                <td>{{ permission.edit ? 'Yes' : 'No' }}</td>
                <td>{{ permission.deleting ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('permission_show', {'id': permission.id}) }}">show</a>
                    <a href="{{ path('permission_edit', {'id': permission.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('permission_new') }}">Create new</a>
{% endblock %}
